<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:padding="20dp"
              android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Job Title"
        android:id="@+id/jobTitle"
        android:textColor="@color/colorPrimaryDark"
        android:padding="5dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:id="@+id/jobDescIcon"
            android:src="@drawable/notepad_icon24"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Job qualification"
            android:id="@+id/jobDescription"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:textStyle="italic"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:id="@+id/jobQualIcon"
            android:src="@drawable/case_icon24"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Qualification"
            android:id="@+id/jobQualification"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:textStyle="italic"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:id="@+id/jobSalIcon"
            android:src="@drawable/cur_dollar_icon24"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Salary"
            android:id="@+id/salary"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply For This Job"
        android:id="@+id/applyButton"
        android:padding="20dp"
        android:theme="@style/Theme.AppCompat.Light"/>

</LinearLayout>